<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/golden</item>
        <item name="colorPrimaryDark">@color/golden_60</item>
        <item name="colorAccent">@color/golden</item>
    </style>

    <style name="DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_material_dark</item>
        <item name="colorPrimaryDark">@color/golden_60</item>
        <item name="colorAccent">@color/golden</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/golden_60</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
